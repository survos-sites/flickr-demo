{
    "name": "glimmer",
    "description": "A demonstration of survos/flickr-bundle",
    "keywords": [
        "php",
        "symfony"
    ],
    "repository": "https://github.com/survos-sites/glimmer",
    "scripts": {
        "dokku": {
            "predeploy": "release: ./c importmap:install && ./c asset-map:compile && ./c secrets:decrypt-to-local --force && ./c doctrine:migrations:migrate -n --allow-no-migration",
            "postdeploy": ""
        }
    },
    "env": {
        "SECRET_TOKEN": {
            "description": "A secret key for verifying the integrity of signed cookies.",
            "value": "secret"
        },
        "WEB_CONCURRENCY": {
            "description": "The number of processes to run.",
            "generator": "echo 5"
        }
    },
    "image": "gliderlabs/herokuish",
    "addons": [
        "dokku-postgres",
        "dokku-redis"
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-php.git"
        }
    ]
}
